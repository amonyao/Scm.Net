{
  "AllowedHosts": "*",
  "Serilog": {
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "MinimumLevel": "Debug",
    "Properties": {
      "Application": "C-SCM"
    },
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "OutputTemplate": "[{Timestamp:HH:mm:ss} {Level:u11}] {Message:lj}{NewLine}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "Env": {
    "dataUri": "/data",
    "dataDir": "dev",
    "upload": "upload",
    "images": "images",
    "logs": "logs"
  },
  "Sql": {
    "Type": "Sqlite",
    "Text": "Data Source=./data/scm.db;"
  },
  "Uid": {
    "Type": "Compose",
    "DbType": "File",
    "DbFile": "./data/scm.uid"
  },
  "Cache": {
    "Type": "Redis",
    "Text": "127.0.0.1,defaultDatabase=5,poolsize=10"
  },
  "Quartz": {
    "Type": "file",
    "BaseDir": "quartz",
    "DataDir": "data",
    "LogsDir": "logs",
    "JobFile": "jobs.json"
  },
  "Phone": {

